<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Item Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <div id="item-box">
      <div id="title-and-date">
        <h1 id="item-title"> <%= item.name %></h1>
        <p>Posted on: <%= item.date_posted %></p>
      </div>
      <div>
        <img id="item-image" src= <%= item.image_url %>
      </div>
      <div id="price-and-description">
        <p> $<%= (item.price)/100 %> <p>
        <p> <%= item.description %> <p>
        <p class="star-btn">❤️</p>
      </div>
    </div>
    <% console.log(user_id, item.seller_id) %>
    <% if (parseInt(user_id, 10) === parseInt(item.seller_id, 10)) { %>
      <div id="mark-as-sold">
        <button>Mark as sold</button>
      </div>
    <% } else { %>
      <div id="message-box">
        <label for="message">Message Seller</label>
        <input class="form-control" type="text" name="message" style="width: 300px; margin: 1em">
        <button type="submit" class="btn btn-primary">Send</button>
      </div>
    <% } %>
  </body>
</html>
